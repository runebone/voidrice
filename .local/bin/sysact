#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

# case "$(printf "ğŸ”’ lock\nğŸšª leave dwm\nâ™»ï¸ renew dwm\nğŸ» hibernate\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ’¤ sleep\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
# 	'ğŸ”’ lock') slock ;;
# 	'ğŸšª leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
# 	'â™»ï¸ renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
# 	'ğŸ» hibernate') slock $ctl hibernate ;;
# 	'ğŸ’¤ sleep') slock $ctl suspend ;;
# 	'ğŸ”ƒ reboot') $ctl reboot -i ;;
# 	'ğŸ–¥ï¸shutdown') $ctl poweroff -i ;;
# 	'ğŸ“º display off') xset dpms force off ;;
# 	*) exit 1 ;;
# esac

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
	*runit*) hib="sudo -A zzz" ;;
	*openrc*) reb="sudo -A openrc-shutdown -r"; shut="sudo -A openrc-shutdown -p 0" ;;
esac

case "$(printf "lock\nleave dwm\nrenew dwm\nhibernate\nreboot\nshutdown\nsleep\ndisplay off" | dmenu -i -p 'Action: ')" in
	'lock') slock ;;
	'leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'hibernate') slock $ctl hibernate ;;
	'sleep') slock $ctl suspend ;;
    'reboot') ${reb:-sudo -A reboot} ;;
	'shutdown') ${shut:-sudo -A shutdown -h now} ;;
	'display off') xset dpms force off ;;
	*) exit 1 ;;
esac
